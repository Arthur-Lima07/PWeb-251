<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>
    <%= character.name %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/personagemDetalhe.css">
</head>

<body>

  <div class="background">
    <div class="container text-white py-5">
      <div class="bg-dark bg-opacity-75 p-4 rounded shadow">
        <h1 class="text-center mb-4">
          <%= character.name %>
        </h1>

        <% if (character.alias) { %>
          <p><strong>Apelido:</strong>
            <%= character.alias %>
          </p>
          <% } %>
            <p><strong>Rank:</strong>
              <%= character.rank %>
            </p>
            <p><strong>Poder:</strong>
              <%= character.power %>
            </p>
            <p><strong>Habilidade de Despertar (Passiva):</strong>
              <%= character.passive %>
            </p>
            <p><strong>Descrição:</strong>
              <%= character.description %>
            </p>

            <% if (character.skills && character.skills.length> 0) { %>
              <h3 class="mt-4">Habilidades:</h3>
              <ul>
                <% character.skills.forEach(skill=> { %>
                  <li>
                    <%= skill %>
                  </li>
                  <% }) %>
              </ul>
              <% } %>

                <% if (character.equipment && character.equipment.length> 0) { %>
                  <h3 class="mt-4">Equipamentos:</h3>
                  <ul>
                    <% character.equipment.forEach(equip=> { %>
                      <li>
                        <%= equip %>
                      </li>
                      <% }) %>
                  </ul>
                  <% } %>

                    <h3 class="mt-4">Atributos:</h3>
                    <ul>
                      <li><strong>Físico:</strong>
                        <%= character.fisico %>
                      </li>
                      <li><strong>Técnica:</strong>
                        <%= character.tecnica %>
                      </li>
                      <li><strong>Elemento:</strong>
                        <%= character.elemento %>
                      </li>
                      <li><strong>Mental:</strong>
                        <%= character.mental %>
                      </li>
                      <li><strong>Agilidade:</strong>
                        <%= character.agilidade %>
                      </li>
                      <li><strong>Carisma:</strong>
                        <%= character.carisma %>
                      </li>
                      <li><strong>Poder:</strong>
                        <%= character.poder %>
                      </li>
                    </ul>

                    <div class="mt-4">
                      <a href="/personagens" class="personagem-link">← Voltar para a lista</a>
                    </div>
      </div>
    </div>
  </div>

</body>

</html>