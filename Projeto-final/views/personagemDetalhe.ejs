<%- include('./partials/header') %>

<main>
  <div class="ui segment">
    <h1><%= character.name %></h1>
    <p><strong>Apelido:</strong> <%= character.alias %></p>
    <p><strong>Poder:</strong> <%= character.power %></p>
    <p><strong>Habilidade de Despertar:</strong> <%= character.passive %></p>
    <p><strong>Descrição:</strong> <%= character.description %></p>

    <h3>Habilidades:</h3>
    <ul>
      <% character.skills.forEach(function(skill) { %>
        <li><%= skill %></li>
      <% }); %>
    </ul>

    <a href="/personagens">← Voltar</a>
  </div>
</main>
